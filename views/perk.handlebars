<!-- Display Perk Entities and attributes -->
<table id="perkTable">
    <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Effect</th>
    </tr>

    <!-- Pending on deciding to use handlebars -->
    {{#if results}}
    {{#foreach results}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.duration}}</td>
        <td>{{this.effect}}</td>
    </tr>
    {{/foreach}}
    {{/if}}
</table>