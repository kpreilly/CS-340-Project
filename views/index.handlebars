                <option value="Titan">Titan</option>
                <option value="VKM 750">VKM 750</option>
                <option value="MX9">MX9</option>
                <option value="GKS">GKS</option>
                <option value="Spitfire">Spitfire</option>
                <option value="Cordite">Cordite</option>
                <option value="Saug 9mm">Saug 9mm</option>
                <option value="Daemon 3XB">Daemon 3XB</option>
                <option value="Auger DMR">Auger DMR</option>
                <option value="ABR 223">ABR 223</option>
                <option value="Swordfish">Swordfish</option>
                <option value="Paladin HB50">Paladin HB50</option>
                <option value="Outlaw">Outlaw</option>
                <option value="SDM">SDM</option>
                <option value="Koshka">Koshka</option>
                <option value="Mog 12">Mog 12</option>
                <option value="SG 12">SG 12</option>
